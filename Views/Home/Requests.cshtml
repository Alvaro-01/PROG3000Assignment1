@model IEnumerable<Assignment1.Models.EquipmentRequest>
@using Assignment1.Models
@{
    var equipmentList = ViewBag.EquipmentList as List<Equipment>;
}

<h2>All Equipment Requests</h2>
<table class="table">
    <thead>
        <tr>
            <th>Equipment Type</th>
            <th>Name</th>
            <th>Role</th>
            <th>Duration (Days)</th>
            <th>Accept</th>
            <th>Decline</th>
        </tr>
    </thead>
    <tbody>
        @foreach (EquipmentRequest request in Model.Where(r => r.Status == RequestStatus.Pending))
        {
            Equipment? equipment = equipmentList?.FirstOrDefault(e => e.Id == request.EquipmentId);
            <tr>
                <td>@(equipment?.Type.ToString() ?? "Equipment unavailable or currently being used")</td>
                <td>@request.Name</td>
                <td>@request.Role</td>
                <td>@request.DurationDays</td>
                <td>
                    <form asp-action="AcceptRequest" method="post">
                        <input type="hidden" name="id" value="@request.Id" />
                        <button type="submit" class="btn btn-success">Accept</button>
                    </form>

                </td>
                <td>
                    <form asp-action="DeclineRequest" method="post">
                        <input type="hidden" name="id" value="@request.Id" />
                        <button type="submit" class="btn btn-danger">Decline</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>