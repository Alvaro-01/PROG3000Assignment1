@model Assignment1.Models.EquipmentRequest


<h2>Equipment Request Form</h2>

<div >
    <form asp-action="RequestForm" method="post">
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="Name" class="form-label">Your name:</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div>
            <label asp-for="Email" class="form-label">Your email:</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div>
            <label asp-for="Phone" class="form-label">Your phone:</label>
            <input asp-for="Phone" class="form-control" />
        </div>

        <div>
            <label asp-for="Role" class="form-label">Your role:</label>
                <select asp-for="Role" class="form-select">
                <option value="">Select your role</option>
                <option value="Student">Student</option>
                <option value="Professor">Professor</option>
                </select>
        </div>

            
        <div>
            <label asp-for="DurationDays" class="form-label">Enter duration of request (in days):</label>
            <input asp-for="DurationDays" class="form-control" />
        </div>

        <div>
            <label asp-for="EquipmentId" class="form-label">Type of equipment:</label>
            <select asp-for="EquipmentId" class="form-select">
                <option value="0">Select equipment</option>

                @if (ViewBag.EquipmentList != null)
                {
                    @foreach (var equipment in ViewBag.EquipmentList)
                    {
                        <option value="@equipment.Id">@equipment.Type - @equipment.Description</option>
                    }
                }
                else
                {
                    <option value="0">No equipment available</option>
                }
                
            </select>
        </div>
        
        
        <button type="submit">Submit Request</button>
    </form>

    @* <ul>
        @foreach (var equipment in ViewBag.EquipmentList)
        {
            <li>@equipment.Type - @equipment.Description</li>
        }
    </ul> *@
</div>